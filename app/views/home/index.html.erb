<h1>Home#index</h1>

<p>Find me in app/views/home/index.html.erb</p>



<div class="title">
<h1>Welcome to the journal</h1>
</div>


<div class="myposts">
<h1>my posts</h1>
<% if signed_in? %>
<% @myposts.each do |mypost| %>
  <div class="one-post">
  <img class="image" src="<%= mypost.media %>">
  <div class="title"> <%= mypost.title %></div>
  <div class="content"><p> <%= mypost.body %> </p></div>
  </div>

<% end%>
<% end %>
  
<h1>all posts</h1>
</div>


<div class="posts">
<% @posts.each do |post| %>
<div class="row">
<div class="col s12 m7">
  <div class="card">
    <div class="card-image">
      <img src="<%= post.media %>">
      <span class="card-title"><%= post.title %></span>
    </div>
    <div class="card-content">
      <p><%= post.body %> </p>
    </div>
    
  </div>
</div>
</div>
<% end%>
</div>

